.number-selector {
  display: flex;
  align-items: center;
}

.minus-btn,
.plus-btn {
  width: 45rpx;
  height: 45rpx;
  border: 1rpx solid #ccc;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
  cursor: pointer;
}

.minus-btn {
  background-color: #f5f5f5;
}

.plus-btn {
  background-color: #ff6600;
  color: white;
}

.quantity-num {
  width: 55rpx;
  text-align: center;
}