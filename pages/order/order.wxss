.order-page {
  padding: 24px;
  background-color: #f5f5f5;
}

.order-header,
.order-items,
.order-total,
.order-note,
.order-footer {
  background: white;
  border-radius: 16px;
  padding: 16px;
  margin-bottom: 16px;
}

.order-address {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 4px;
}

.order-contact {
  color: #666;
  font-size: 14px;
  margin-bottom: 8px;
}

.order-time {
  color: #f40;
  font-size: 16px;
}

.order-item {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}

.order-item-image {
  width: 60px;
  height: 60px;
  margin-right: 12px;
}

.order-item-details {
  flex: 1;
}

.order-item-name {
  font-size: 16px;
  margin-bottom: 4px;
}

.order-item-spec {
  color: #666;
  font-size: 14px;
}

.order-item-quantity {
  color: #666;
  font-size: 14px;
}

.order-item-price {
  color: #333;
  font-size: 16px;
}

.order-fee {
  margin-top: 16px;
}

.fee-item {
  color: #666;
  font-size: 14px;
  margin-bottom: 4px;
}

.order-total {
  font-size: 18px;
  font-weight: bold;
  text-align: right;
}

.payment-note {
  color: #666;
  font-size: 14px;
}

.order-total-amount {
  font-size: 18px;
  font-weight: bold;
}

.submit-order-btn {
  background: #ffcc00;
  color: white;
  padding: 8px 16px;
  border-radius: 24px;
  text-align: center;
}